---
import { Image } from "astro:assets";
import heroImage from '../hero/img/hero-bakery.png';
---

<section class="hero">
    <div class="hero-image">
        <Image src={heroImage} alt='NX Coffee & Bread Hero Image' />
    </div>
  <div class="hero-content">
    <h2>Baked with Passion, Served Fresh</h2>
    <p>Traditional recipes, baked daily for your table</p>
    <a href="#history" class="btn">Get to know our history</a>
  </div>
</section>

<style>
.hero {
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  min-height: 80vh;
  overflow: hidden;
  padding-inline: 0.5rem;
}

/* Imagen */
.hero-image {
    width: 100%;
    overflow: hidden;
    padding-top: 1rem;
}
.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: left center;
  border-radius: 5px ;
}

/* Contenido */
.hero-content {
  padding: 3rem 4rem;
  color: #1b263b;
  max-width: 700px;
  margin-left: auto;
}
.hero-content h2 {
  font-size: clamp(2.2rem, 4vw, 3.5rem);
  font-weight: 700;
  background: linear-gradient(90deg, #1F2A44 0%, #272a30 100%);
  -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  margin-bottom: 1rem;
}
.hero-content p {
  font-size: clamp(1rem, 2vw, 1.25rem);
  color: #555;
  line-height: 1.6;
  margin-bottom: 2rem;
}
.btn {
  background: #F59E0B;
  color: #000;
  padding: 0.8rem 1.5rem;
  border-radius: 5px;
  text-decoration: none;
  font-weight: 600;
  transition: background 0.3s ease;
}
.btn:hover {
  background: #ff8513;
}

/* Responsivo */
@media (max-width: 900px) {
  .hero {
    grid-template-columns: 1fr;
    text-align: center;
  }
  .hero-image img {
    height: 300px;
  }
  .hero-content {
    padding: 2rem 1.5rem;
    margin: 0 auto;
  }
  .hero h2 {
    font-size: 2rem;
  }
}
</style>

