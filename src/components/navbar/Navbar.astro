---
import SearchInput from "../SearchInput.astro";
const {isLoggedIn, isAdmin } = Astro.locals;

---

<nav class="navbar">
  <h1 class="logo">
    <img src="/nx-b&C.png" alt="NX bread & Coffe logo" width="55px" height="55px" />
  </h1>

  <div class="search-bar">
    <svg xmlns="http://www.w3.org/2000/svg" class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
    </svg>
    <SearchInput id="search-products" placeholder="Search products..." data-target=".product-card" />
  </div>

  <div class="menu-wrapper">
    <button class="menu-toggle" aria-label="Toggle menu">
      ☰
    </button>
  
    <ul class="nav-links">
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
      {
        !isLoggedIn ? (
          <a href="/login">Login</a>
        ) : (
          <a id="logout" href="#">Logout</a>
        )
      }
    </ul>
  </div>
</nav>

<script>
  const menuToggle = document.querySelector('.menu-toggle') as HTMLButtonElement;
  const navLinks = document.querySelector('.nav-links') as HTMLUListElement; 
  const { signOut } = await import('auth-astro/client');
  const logoutElement = document.querySelector('#logout');
  const searchInput = document.getElementById("search-products") as HTMLInputElement;

  menuToggle.addEventListener('click', () => {
    navLinks.classList.toggle('active');
  });
// Logout functionality
  logoutElement?.addEventListener('click', async () => {
    await signOut();
    window.location.href = '/';
  });
  // Search input
  searchInput.addEventListener("input", (e) => {
  const target = e.target as HTMLInputElement;
  const query = target.value.trim().toLowerCase();

  window.dispatchEvent(new CustomEvent("filter-products", { detail: { query } }));
});

</script>

<style>

.navbar {
  position: relative; 
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  padding: 1rem 2rem;
  background: #fff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.logo img {
  justify-self: start;
  height: 50px;
  width: auto;
}

.search-bar {
  justify-self: center;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-right: 3rem;
}

.search-icon {
  width: 1.25rem;
  height: 1.25rem;
  color: #4a5568;
}

.nav-links {
  justify-self: end;
  display: flex;
  align-items: center;
  gap: 1.5rem;
  list-style: none;
  transition: all 0.3s ease;
}

.nav-links a {
  position: relative;
  font-weight: 600;
  color: #1b263b;
  text-decoration: none;
  transition: color 0.3s ease;
}

.nav-links a::after {
  content: "";
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 0%;
  height: 2px;
  background-color: #F59E0B;
  transition: width 0.3s ease;
}

.nav-links a:hover {
  color: #F59E0B;
}

.nav-links a:hover::after {
  width: 100%;
}

/* botón hamburguesa */
.menu-toggle {
  display: none;
  justify-self: end;
  font-size: 1.8rem;
  background: none;
  border: none;
  cursor: pointer;
  color: #1b263b;
}

/* --- Responsivo --- */
@media (max-width: 768px) {
  .navbar {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 1rem 1.5rem;
  }
  .menu-wrapper { 
    position: relative; 
    display: inline-block; 
  }
  .logo img {
    height: 45px;
  }

  .search-bar {
    order: 3;
    width: 100%;
    margin-top: 0.75rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .menu-toggle {
    display: block;
    font-size: 1.8rem;
    background: none;
    border: none;
    cursor: pointer;
    color: #1b263b;
  }

  .menu-wrapper .nav-links {
  position: absolute;
  top: 100%;
  right: 0;
  width: auto;           
  min-width: 120px;    
  max-width: 90vw;       
  background: white;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  box-shadow: 0 6px 18px rgba(0,0,0,0.12);
  display: none;
  flex-direction: column;
  gap: .5rem;
}

/* abrir */
.menu-wrapper .nav-links.active { 
  display: flex; 
}

  .nav-links.active {
    display: flex;
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .nav-links a {
    width: 100%;
    padding: 0.75rem 0;
    border-bottom: 1px solid #eee;
  }

  .nav-links a:last-child {
    border-bottom: none;
  }
}

</style>

