---
import Navbar from '@components/navbar/Navbar.astro';
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = ' bakeryApp' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <main >
      <slot />
    </main>
    <footer class="footer">
      <p>&copy; {new Date().getFullYear()} NX Coffee & Bread. All rights reserved.</p>
    </footer>
  </body>
</html>
